@{
    ViewBag.Title = "";
}

<style>
    .content-wrapper {
        text-align: center;
        padding-bottom: 35px;
        padding-left: 0;
        padding-right: 0;
    }

    .content-wrapper h2 {
            font-size: 2.5rem;
            color: #000;
            font-family: Roboto Condensed,sans-serif;
            font-weight: 700;
    }

    p.introduction {
        color: #000;
        font-family: Roboto,sans-serif;
        font-size: 1.125rem;
        line-height: 1.4;
    }
</style>

<div class="content-wrapper">
    <h2>About the Library</h2>
    <p class="introduction">We inspire and enable independent minds, providing resources, spaces and technologies.</p>
</div>

<style>
    .box-featured__wrapper {
        display: flex;
        padding-right: 15px;
        padding-left: 15px;
    }
    .box-featured {
        flex-direction: column;
        margin-bottom: 2rem;
        @*background-color: #fff;*@
        border-bottom: 1px solid #ddd;
        width: 100%;
    }
    img.box-featured__thumb-image {
        height: auto;
        max-width: 100%;
    }
    .box-featured__thumb-image {
        width: 100%;
    }
    .box-featured__blurb {
        padding: 1.25rem 1.25rem 0.25rem;
    }
    .box-featured__heading {
        font-size: 1.2rem;
        line-height: 1.2;
        margin-top: 0;
        max-width: 75ch;
        color: #006dae;
        font-weight: 800;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .box-featured__description {
        margin-bottom: 1rem;
        margin-top: 1rem;
        overflow: hidden;
        color: #505050;
        font-size: 14px;
    }
    a.box-featured__heading-link {
        font-size: 1.2rem;
        line-height: 1.2;
        margin-top: 0;
        max-width: 75ch;
        color: #006dae;
        font-weight: 800;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>


