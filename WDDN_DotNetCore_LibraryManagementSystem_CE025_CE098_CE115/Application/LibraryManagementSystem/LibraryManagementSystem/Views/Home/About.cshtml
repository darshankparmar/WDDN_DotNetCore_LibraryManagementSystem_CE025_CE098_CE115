<style>

        .box-featured__horizontal {
            margin-bottom: 20px;
            margin-top: 0;
            min-height: 80px;
            position: relative;
        }

        .box-featured__horizontal .box-featured__linkshadow {
            display: flex;
            height: 161px;
            box-shadow: 0 1px 3px rgb(0 0 0 / 12%), 0 1px 2px rgb(0 0 0 / 24%);
            cursor: pointer;
            text-decoration: none;
            transition: all .3s ease;
        }

        .box-featured__horizontal .box-featured__linkshadow:hover {
            box-shadow: -5px 5px 3px rgb(0 0 0 / 12%), -4px 5px 2px rgb(0 0 0 / 24%);
        }

        .box-featured__horizontal .box-featured__thumb-image {
            display: flex;
            height: 161px;
            max-width: 255px;
            width: 100%;
            min-width: 255px;
        }

        .box-featured__horizontal .box-featured__thumb-image img {
                min-height: 80px;
                min-width: 126px;
                display: block;
                width: 100%;
        }

        .box-featured__horizontal .box-featured__blurb {
            flex-grow: 1;
            justify-content: left;
            max-width: 100%;
            min-height: auto;
            overflow: hidden;
            padding: 1.5rem;
            text-overflow: ellipsis;
        }

        .box-featured__horizontal .box-featured__blurb h3 {
                font-size: 1.2rem;
                line-height: 1.2;
                margin-top: 0;
                max-width: 75ch;
                color: #006dae;
                font-weight: 800;
                overflow: hidden;
                text-overflow: ellipsis;
        }

        .box-featured__horizontal .box-featured__blurb p {
                -webkit-line-clamp: 4;
                display: -webkit-box;
                margin: 0;
                overflow: hidden;
                color: #505050;
                font-size: 14px;
                max-width: 115ch;
                text-decoration: none;
                padding-top: 12px;
                height: auto;
                visibility: visible;
        }
</style>


